<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/UX"
    android:orientation="vertical"
    tools:context="info.androidhive.glide.activity.AboutActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:theme="@style/ToolbarColoredBackArrow3"
            app:titleTextColor="@color/UX"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="190dp"
                android:layout_height="150dp"
                android:layout_gravity="center" />

            <TextView
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/graf_media" />

            <TextView
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColorLink="#5255ee"
                android:autoLink="phone"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="graf media ©"
                />
            <TextView
                android:visibility="gone"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColorLink="#5255ee"
                android:autoLink="phone"
                android:padding="5dp"
                android:text="Номер для заказа: 0701 22 99 68"
                android:id="@+id/textView" />

            <TextView
                android:visibility="gone"
                android:textColor="@color/colorAccent"
                android:autoLink="phone"
                android:textColorLink="#5255ee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"

                android:text="Номер для сотрудничества: 0706 88 77 21" />

            <TextView
                android:visibility="gone"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/graf_media2" />

            <TextView

                android:visibility="gone"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/graf_m3" />

            <TextView
                android:visibility="gone"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Напомним что данное приложение является частной сообственностью. Повтор или использование подобной продукции уголовно наказуема по КР" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
